<div id='main_menu' class='<%= current_user.user_name if signed_in? %>'>
  <ul>
    <i id='home-icon' class="icon-bullhorn icon-large"></i>
    <li id='page_title'><%= @handle %></li>
    <% if signed_in? %>
      <li id='messages_button'>
        <%= link_to user_path(current_user) do %>
          <i class='icon-comments'></i> Messages
        <% end %>
      </li>
      <li id='files_button'>
        <%= link_to attachments_path do %>
          <i class='icon-folder-open'></i> Files
        <% end %>
      </li>
      <li id='profile_button'>
        <%= link_to edit_user_path(current_user) do %>
          <i class='icon-user'></i> Profile
        <% end %>
      </li>
      <% if current_user.admin? %>
        <li id='transcripts_button'>
          <%= link_to transcripts_path do %>
            <i class='icon-search'></i> Transcripts
          <% end %>
        </li>
        <li id='manage_users_button'>
          <%= link_to users_path do %>
            <i class='icon-group'></i> Manage Users
          <% end %>
        </li>
      <% end %>
      <li id='sign_out_button'>
        <%= link_to signout_path do %>
          <i class='icon-signout'></i> Sign out
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

