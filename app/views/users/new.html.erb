<h2>Sign Up</h2>

<div class="center_spot"> 
  <%= form_for(@user) do |f| %>

    <div class="field">
      <%= f.label :name %> </br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :full_name %> </br>
      <%= f.text_field :full_name %>
    </div>

    <div class="field">
      <%= f.label :email %> </br>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %> </br>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %> </br>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up" %>
    </div>

   <p>Already Signed Up? <%= link_to "Sign In", signin_path %></p>

  <% end %>
</div>

