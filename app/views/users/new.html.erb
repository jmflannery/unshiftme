<div id="sign_up">
  <p>Sign Up</p>
  <%= form_for(@user) do |f| %>

    <div class="field">
      <%= f.label :name %> </br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :full_name %> </br>
      <%= f.text_field :full_name %>
    </div>

    <div class="field">
      <%= f.label :email %> </br>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %> </br>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %> </br>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="actions">
      <ul>
        <li><%= f.submit "Sign Up" %></li>
        <li>Already signed up?</li>
        <li><%= link_to "Sign in", signin_path %></li>
      </ul>
    </div>
  <% end %>
</div>

