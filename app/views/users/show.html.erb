<div id="users_show_top">
  <p>
    <%= @user.full_name %>
    <% if signed_in? %>
      <%= link_to "Users", "#", :id => "users_link" %>
      <%= link_to "Sign out", signout_path %>
      <%= link_to "Update Profile", edit_user_path(current_user) %>
    <% end %>
  </p>
</div>

<div id="users_show_main">

  <div id="messages" data-start="<%= Time.now.to_i %>">
    <table id="messages_table">
      <tr class="message" data-time="<%= Time.now.to_i %>"><td></td><td></td></tr>
      <%= render @messages %>
    </table>
  </div>
  
  <div id="msg_input">
    <% if signed_in? %>
      <%= form_for(@message, :remote => true) do |f| %>
        <%= f.text_field :content %>
        <%= f.submit "Send" %>
      <% end %>
    <% end %>
  </div>

</div>


<div id="users_show_bottom">
</div>


