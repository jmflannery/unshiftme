<div id="user_name_area">
  <ul>
    <li id='user_name'><%= @user.full_name %></li>
    <% if signed_in? %>
      <!--<%= link_to("Users", users_path, :id => "users_link", :remote => true, :format => :js) %>-->
      <li id='sign_out'><%= link_to "Sign out", signout_path %></li>
      <!--<%= link_to "Update Profile", edit_user_path(current_user) %>-->
    <% end %>
  </ul>
</div>

<div id='send_to_section'>
  <table>
    <tr>
      <td id='to'>
        <h1><%= link_to("To:", users_path, :id => "users_link", :remote => true, :format => :js) %></h1>
      </td>
      <td id='send_to'>
        <div id='send_to_box'>
          <table id='senders_table'>
          </table>
        </div>
      </td>
  </table>
</div>

  <div id="messages" data-start="<%= Time.now.to_i %>">
    <table id="messages_table">
      <tr class="message" data-time="<%= Time.now.to_i %>"><td></td><td></td></tr>
      <%= render @messages %>
    </table>
  </div>
  
  <div id="msg_input">
    <% if signed_in? %>
      <%= form_for(@message, :remote => true, :format => :js) do |f| %>
        <%= f.text_field :content %>
        <%= f.submit "Send" %>
      <% end %>
    <% end %>
  </div>

</div>

