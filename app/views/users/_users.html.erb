<% count = 0 %>
<% size = users.size %>
<% unless users.empty? %>
  <p>Available Users: 
  <% users.each do |user| %>
    <% if count == (size - 1) and size > 1 %>
      and
    <% elsif count > 0 %>
      ,
    <% end %>
    <%= link_to(user.full_name, recipients_path(user: user), method: :post, remote: true, format: :js) %>
    <% count += 1 %>
  <% end %>
  <span id='hide_button'> Hide</span></p>
<% else %>
  <p>Available Users: Nobody!<span id='hide_button'> Hide</span></p>
<% end %>
