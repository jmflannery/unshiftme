<div id="edit_user">
  <h1>Edit user</h1>
  <%= @user.user_name %>

  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>

    <div class="field">
      <%= f.label :user_name %> </br>
      <%= f.text_field :user_name %>
    </div>

    <div class="field">
      <%= f.label :password %> </br>
      <%= f.password_field :password, id: "pass" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %> </br>
      <%= f.password_field :password_confirmation, id: "conf" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>
</div>
