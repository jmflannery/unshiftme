<div id="edit_profile_page">

  <div class="center_spot">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>

      <div class="field">
        <%= f.label :user_name %> </br>
        <%= f.text_field :user_name %>
      </div>

      <div id="select_normal_workstation">
        Normal Workstation(s)
        <div id="td_workstations">
          <%= render collection: @td_workstations, 
                     partial: 'workstations/workstation_checkbox',
                     locals: { user: current_user } if @td_workstations %>
        </div>
        <div id="ops_workstations">
          <%= render collection: @ops_workstations, 
                     partial: 'workstations/workstation_checkbox',
                     locals: { user: current_user } if @ops_workstations %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>
    <div id="change_password_link">
      <%= link_to "Change password", edit_password_user_path(@user) %>
    </div>
  </div>
</div>

