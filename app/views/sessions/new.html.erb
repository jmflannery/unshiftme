<h1>Sign In</h1>

<%= form_tag sessions_path do %>

  <div class="field">
    <%= label_tag :name %></br>
    <%= text_field_tag :name, params[:name] %>
  </div>

  <div class="field">
    <%= label_tag :password %></br>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Sign In" %>
  </div>

<% end %>

<p>New User? <%= link_to "Sign up now", signup_path %></p>

