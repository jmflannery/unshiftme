<div id="signin">
  
  <div class="center_spot">
    <%= form_tag session_path do %>

      <div class="field">
        <%= label_tag :user_name %></br>
        <%= text_field_tag :user_name %>
      </div>

      <div class="field">
        <%= label_tag :password %></br>
        <%= password_field_tag :password %>
      </div>

      <div id="select_workstation">
        <div id="td_workstations">
          <%= render @td_workstations %>
        </div>
        <div id="ops_workstations">
          <%= render @ops_workstations %>
        </div>
      </div>

      <div class="actions">
        <%= submit_tag "Sign In" %>
      </div>

    <% end %>

    <p>New User? <%= link_to "Register here", register_path %></p>

  </div>
</div>
