<% if @recipients %>
  <% @recipients.each do |recipient| %>
    $('<%= "##{Workstation.find(recipient.workstation_id).abrev}.recipient_workstation.off" %>').data("recipient_id", <%= "#{recipient.id}" %>').turnOn(); 
  <% end %>
<% elsif @recipient %>
    $('<%= "##{Workstation.find(@recipient.workstation_id).abrev}.recipient_workstation.off" %>').data("recipient_id", <%= "#{@recipient.id}" %>').turnOn();
<% end %>
