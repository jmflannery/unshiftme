<% if @recipients %>
  <% @recipients.each do |recipient| %>
    $('<%= "##{Desk.find(recipient.desk_id).abrev}.recipient_desk.on" %>').removeClass('<%= "#{recipient.id}" %>').addClass("off").removeClass("on"); 
  <% end %>
<% elsif @recipient %>
  $("<%= ".recipient_desk.#{@recipient.id}.on" %>").removeClass("<%= @recipient.id.to_s %>").addClass("off").removeClass("on");
<% end %>
