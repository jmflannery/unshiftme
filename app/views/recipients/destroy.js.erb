// display/refresh the recipients
$("#send_to_section").html("<%= j(render(@my_recipients)) %>");

// display/refresh the online users, if any
<% if @online_users.nil? || @online_users.empty? %>
  $("#online_users_list").html("<div><h3>Nobody's at the party!</h3></div>");
<% else %>
  $("#online_users_list").html("<%=j(render(@online_users)) %>");
<% end %>
