<% if @recipients %>
  <% @recipients.each do |recipient| %>
    $('<%= "##{Workstation.find(recipient.workstation_id).abrev}.recipient_workstation.off" %>').turnOn().data("data-recipient-id", '<%= "#{recipient.id}" %>');
  <% end %>
<% elsif @recipient %>
    $('<%= "##{Workstation.find(@recipient.workstation_id).abrev}.recipient_workstation.off" %>').turnOn().data("data-recipient-id", '<%= "#{@recipient.id}" %>');
<% end %>

